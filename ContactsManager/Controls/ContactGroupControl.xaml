<UserControl x:Class="View.Controls.ContactGroupSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" IsEnabled="{Binding IsEnabled}">
    <StackPanel>
        <ListBox ItemsSource="{Binding ContactGroups}" SelectedItem="{Binding SelectedGroup}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="ValueBox"
                            Text="{Binding Name}"
                            FontWeight="Bold"
                            MinWidth="100"
                            VerticalAlignment="Center"
                            Height="auto"/>

                        <Button Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Width="24"
                            Height="24"
                            VerticalAlignment="Center"
                            Command="{Binding DataContext.DeleteGroupCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                            CommandParameter="{Binding}">
                            <Image Source="/icons/exit.png"
                               Width="24"
                               Height="24"
                               Stretch="Uniform"/>
                        </Button>
                        <Button Style="{StaticResource EditButtonStyle}"
                            Command="{Binding DataContext.EditGroupCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                            CommandParameter="{Binding}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button 
            Style="{StaticResource AddButtonStyle}"
                Content="+ Добавить группу"
                Command="{Binding AddGroupCommand}"/>
    </StackPanel>
</UserControl>
