<Window x:Class="View.Util.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.Util"
        mc:Ignorable="d"
        Title="Введите значение" Height="150" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock x:Name="MessageTextBlock" Text="Введите значение:" Margin="0,0,0,5"/>
        <TextBox x:Name="InputTextBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Отмена" Width="75" Margin="5,0,0,0" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
